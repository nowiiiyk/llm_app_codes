{
	"name": "Streamlit Container (Python 3.9)",
	"build": { 
		"context": "..",
		// "dockerfile": "Dockerfile_cpu"
		"dockerfile": "Dockerfile"
	},
	"forwardPorts": [
		8501
	],
	"customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
